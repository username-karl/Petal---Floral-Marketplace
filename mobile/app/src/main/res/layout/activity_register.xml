<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/petal_ivory"
    tools:context=".RegisterActivity">

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:weightSum="1"
        android:gravity="bottom">

        <!-- Logo / Title Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petal"
                android:fontFamily="serif"
                android:textColor="@color/petal_stone_900"
                android:textSize="48sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Welcome Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Join the"
                android:textColor="@color/petal_stone_900"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="marketplace."
                android:textColor="@color/petal_stone_800"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Input Fields -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input"
            android:hint="Full Name"
            android:textColorHint="@color/petal_stone_300"
            android:textColor="@color/petal_stone_900"
            android:inputType="textPersonName"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input"
            android:hint="Email Address"
            android:textColorHint="@color/petal_stone_300"
            android:textColor="@color/petal_stone_900"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input"
            android:hint="Password"
            android:textColorHint="@color/petal_stone_300"
            android:textColor="@color/petal_stone_900"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_primary"
            app:backgroundTint="@null"
            android:text="Create account"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:gravity="center"
            android:textColor="@color/petal_stone_900"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@drawable/bg_glass_card"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
